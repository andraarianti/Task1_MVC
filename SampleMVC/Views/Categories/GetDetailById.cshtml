@model IEnumerable<MyWebFormApp.BLL.DTOs.CategoryDTO>

<div class="row">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Articles</h1>
	</div>

	<div class="col-lg-12">
		<!-- Basic Card Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Article Page</h6>
			</div>
			<div class="card-body">
				<div class="row">
					<ul class="list-group">
						@foreach (var category in Model)
						{
							<li class="list-group-item">
								<a asp-controller="Articles" asp-action="Details" asp-route-id="@category.CategoryID" class="btn btn-outline-info btn-sm">@category.CategoryName</a>
							</li>
						}
					</ul>
				</div>
				<br />
			</div>
		</div>
	</div>
</div>
