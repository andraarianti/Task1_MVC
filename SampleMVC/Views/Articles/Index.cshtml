@model IEnumerable<MyWebFormApp.BLL.DTOs.ArticleDTO>

<div class="row">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Articles</h1>
    </div>

    <div class="col-lg-12">
        <!-- Basic Card Example -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Article Page</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <ul class="list-group">
                        @foreach (var category in Model)
                        {
                            <li class="list-group-item">
                                <a href="#" class="btn btn-outline-info btn-sm">@category.Category.CategoryName</a>
                            </li>
                        }
                    </ul>
                </div>
                <br />
                <button type="button" class="btn btn-primary btn-sm" onclick="addArticle()">
                    Add Article
                </button>

                <div class="row">
                    <div class="col-lg-12">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Category</th>
                                    <th>Title</th>
                                    <th>Approval</th>
                                    <th>&nbsp;</th>
                                    <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var article in Model)
                                {
                                    <tr>
                                        <td>@article.ArticleID</td>
                                        <td>@article.Category.CategoryName</td>
                                        <td>@article.Title</td>
                                        <td>@article.IsApproved</td>
                                        <td>
                                            <img src="@Url.Content($"~/Pics/{article.Pic}")" width="100" />
                                        </td>
                                        <td>
                                            <a href="#" class="btn btn-outline-warning btn-sm" onclick="editArticle('@article.ArticleID', '@article.CategoryID')">Edit</a>
                                            <a href="#" class="btn btn-outline-danger btn-sm" onclick="deleteArticle('@article.ArticleID')">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
