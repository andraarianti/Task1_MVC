@model IEnumerable<MyWebFormApp.BLL.DTOs.ArticleDTO>

@{
	ViewData["Title"] = "Details";
}

<a asp-controller="Articles" asp-action="Create" class="btn btn-outline-info btn-sm">Add Article</a>

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Article ID</th>
                        <th>Category ID</th>
                        <th>Category</th>
                        <th>Title</th>
                        <th>Approval</th>
                        <th>&nbsp;</th>
                        <th>&nbsp;</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var article in Model)
                    {
                        <tr>
                            <td>@article.ArticleID</td>
                            <td>@article.Category.CategoryID</td>
                            <td>@article.Category.CategoryName</td>
                            <td>@article.Title</td>
                            <td>@article.IsApproved</td>
                            <td>
                                <img src="@Url.Content($"~/Pics/{article.Pic}")" width="100" />
                            </td>
                            <td>
                                <a href="#" class="btn btn-outline-warning btn-sm" onclick="editArticle('@article.ArticleID','@article.CategoryID')">Edit</a>
                                <a asp-controller="Articles" asp-action="Details" asp-route-id="@article.ArticleID" onclick="return confirm('Yakin Mau Hapus ?')" class="btn btn-outline-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
