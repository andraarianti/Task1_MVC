@model MyWebFormApp.BLL.DTOs.ArticleCreateDTO

<div class="row">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800">Add Category</h1>
	</div>

	<div class="col-lg-12">
		<!-- Basic Card Example -->
		<div class="card shadow mb-4">
			<div class="card-header py-3">
				<h6 class="m-0 font-weight-bold text-primary">Add Category</h6>
			</div>
			<div class="card-body">
				@Html.Raw(TempData["message"])
				<form method="post" action="/Articles/Create">
					<div class="form-group">
						<label for="txtTitle">Category ID :</label>
						<input type="text" id="txtCategory" class="form-control" name="CategoryID" value="@ViewData["CategoryID"]"/>
					</div>
					<div class="form-group">
						<label for="txtTitle">Title :</label>
						<input type="text" id="txtTitle" class="form-control" name="Title" placeholder="Enter Title" />
					</div>
					<div class="form-group">
						<label for="txtDetail">Details :</label>
						<textarea id="txtDetail" class="form-control" name="Details" placeholder="Enter Detail"></textarea>
					</div>
					<div class="form-group form-check">
						<label class="form-check-label">
							<input type="checkbox" id="chkIsApproved" asp-for="IsApproved" name="IsApproved" class="form-check-input" />
							Is Approved
						</label>
					</div>
					<div class="form-group">
						<label for="fpPic">Picture :</label>
						<input type="file" id="fpPic" name="Pic" class="form-control" />
					</div>


					<input type="Submit" value="Create" class="btn btn-success btn-sm" asp-route-id="@ViewData["CategoryID"]" />
				</form>
			</div>
		</div>

	</div>

</div>

